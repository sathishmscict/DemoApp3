<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"

                android:layout_marginBottom="6dp"
                android:paddingLeft="4dp"
                android:visibility="gone"
                android:text="Seller Details"
                android:textColor="@color/text_color" />


            <LinearLayout
                android:layout_width="fill_parent"

                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="25dp"
                android:gravity="center"

                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"


                    android:gravity="center"

                    android:layout_weight="1"


                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSellerAvatar"
                        android:layout_width="75dp"
                        android:layout_height="75dp"

                        android:src="@drawable/icon_userlogo"

                        />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/deviderColor" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtSellerRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/icon_rating_star_black"
                        android:gravity="center"
                        android:text="0.0"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/txtSellerRatingsCount"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0 ratings" />


                </LinearLayout>


            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/edtSellerCompanyWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:theme="@style/MyTextLabel">

                <EditText
                    android:id="@+id/edtSellerCompnay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="false"
                    android:editable="false"
                    android:paddingLeft="10dp"

                    android:background="@null"
                    android:hint=" Company Name"
                    android:inputType="textCapWords"
                    android:textColorHint="#000000" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edtSellerNameWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:visibility="gone"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:theme="@style/MyTextLabel">

                <EditText
                    android:id="@+id/edtSellerName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
android:background="@null"
                    android:clickable="false"
                    android:editable="false"
                    android:paddingLeft="10dp"


                    android:hint=" Name"
                    android:inputType="textCapWords"
                    android:textColorHint="#000000" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/edtSellerEmailWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:theme="@style/MyTextLabel">

                <EditText
                    android:id="@+id/edtSellerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="false"
                    android:editable="false"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:hint=" Email"
                    android:inputType="textCapWords"
                    android:textColorHint="#000000" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/edtSellerAddressWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:visibility="gone"

                android:layout_marginRight="4dp"
                android:theme="@style/MyTextLabel">

                <EditText
                    android:id="@+id/edtSellerAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:clickable="false"
                    android:editable="false"
                    android:background="@null"

                    android:hint=" Address"

                    android:inputType="textMultiLine|textCapWords"
                    android:textColorHint="#000000" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/txtSellerCode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:paddingLeft="10dp"
                android:visibility="gone"
                android:gravity="center|left"
                android:hint=" Seller Code -12345"
                android:textColor="@color/colorSecondaryText2"

                android:textColorHint="#000000"
                />


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>



